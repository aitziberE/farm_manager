<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_provider_tree" model="ir.ui.view">
        <field name="name">provider.tree</field>
        <field name="model">farm_manager.provider</field>
        <field name="arch" type="xml">
            <tree string="Providers">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="product_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_provider_form" model="ir.ui.view">
        <field name="name">provider.form</field>
        <field name="model">farm_manager.provider</field>
        <field name="arch" type="xml">
            <form string="Provider">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="email" required="1"/>
                            <field name="phone" required="1"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="product_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="list_price"/>
                                    <field name="default_code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_provider_search" model="ir.ui.view">
        <field name="name">provider.search</field>
        <field name="model">farm_manager.provider</field>
        <field name="arch" type="xml">
            <search string="Search Providers">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="product_ids"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="partner" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_provider" model="ir.actions.act_window">
        <field name="name">Providers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">farm_manager.provider</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_provider_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first provider!
            </p>
        </field>
    </record>
</odoo>
