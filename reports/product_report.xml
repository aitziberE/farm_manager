<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="product_report_template">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <div class="page">
                <!-- Encabezado -->
                <div style="background-color: #0066B3; color: white; padding: 10px; text-align: center; border-radius: 5px;">
                    <h2>Informe del Producto <t t-esc="docs.name"/></h2>
                </div>

                <!-- Información General -->
                <div style="margin: 20px 0; padding: 10px; border: 1px solid #ddd; border-radius: 5px;">
                    <p><strong>Nombre del Producto:</strong> <t t-esc="docs.name"/></p>
                    <p><strong>Precio:</strong> <t t-esc="docs.price"/></p>
                    <p><strong>Stock:</strong> <t t-esc="docs.stock"/></p>
                    <p><strong>Consumo Mensual:</strong> <t t-esc="docs.monthly_consume"/></p>
                </div>

                <!-- Pie de página -->
                <div style="margin-top: 20px; text-align: center; font-size: 12px; color: #666;">
                    <p>Informe generado automáticamente por <strong>Farm Manager</strong></p>
                    <p>Para más información, visite nuestra plataforma.</p>
                </div>
            </div>
        </t>
    </t>
</template>


    <record id="action_product_report" model="ir.actions.report">
        <field name="name">Informe de Producto</field>
        <field name="model">farm_manager.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">farm_manager.product_report_template</field>
        <field name="print_report_name">'Informe_Grupo_%s' % (object.name)</field>
        <field name="binding_model_id" ref="farm_manager.model_farm_manager_product"/>
    </record>
</odoo>